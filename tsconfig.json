{
  "extends": "@tsconfig/recommended",
  "compilerOptions": {
    "outDir": "./dist",
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "webworker"],
    "types": [
      "@cloudflare/workers-types",
      "node"
    ],
    "baseUrl": "./",
    "paths": {
      "jsencrypt": ["node_modules/jsencrypt"]
    },
    "moduleResolution": "Node"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
